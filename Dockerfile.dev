# Use Node.js LTS version
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 3030

# Set development environment
ENV NODE_ENV=development

# Start the dev server with hot reload
CMD ["npm", "run", "dev"]
